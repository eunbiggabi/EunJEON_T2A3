
<div class="form__box">
    <form action="" class="form__container">
        <h1>Create Account</h1>
        <div class="name-box">
            <label for="f_name">Username</label>
            <input
                type="text"
                name="f_name"
                id="f_name"
                required
            />
        </div>

        <div class="name-box">
            <label for="l_name">Email</label>
            <input
                type="text"
                name="l_name"
                id="l_name"
                required
            />
        </div>

        <div class="email-box">
            <label for="email">Password (8 characters minimum)</label>
            <input
                type="email"
                name="email"
                id="email"
                required
            />
        </div>

        <div class="email-box">
            <label for="email">Password confirmation</label>
            <input
                type="password"
                name="password"
                id="password"
                required
            />
        </div>

        <div class="btn__container">    
            <button type="submit" name="submit" class="btn__form">CREATE</button>
        </div>
    </form>
</div>
